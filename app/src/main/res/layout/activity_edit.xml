<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui"
    tools:context=".Edit">

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="347dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="77dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#FFEB3B"
            android:backgroundTint="#45009688"
            android:ems="10"
            android:hint="Car Type "
            android:inputType="textPersonName"
            android:textColorHighlight="#3EFFFFFF"
            android:textColorHint="#F4FFFE"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFEB3B"
            android:backgroundTint="#45009688"
            android:ems="10"
            android:hint="Model car"
            android:inputType="textPersonName"
            android:textColorHighlight="#3EFFFFFF"
            android:textColorHint="#F4FFFE"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#960000"
            android:backgroundTint="#009688"
            android:text="The nearest Loctations"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Cairo"
                android:textColor="#F4FFFE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Nasr city"
                android:textColor="#F4FFFE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Elshrouk"
                android:textColor="#F4FFFE"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="411dp"
            android:layout_height="40dp"
            android:background="#775D0096"
            android:backgroundTint="@color/white"
            android:entries="@array/Edit" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="42dp"

            android:text="I accept term"
            android:textColor="#B9FFFEFE"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button

        android:id="@+id/button"
        android:layout_width="281dp"
        android:layout_height="67dp"
        android:backgroundTint="#009689"
        android:text="Submit"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649" />
</androidx.constraintlayout.widget.ConstraintLayout>